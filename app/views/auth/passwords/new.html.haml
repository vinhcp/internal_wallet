.login-form
  %h2 Forgot your password?
  = simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f|
    = f.input :email, wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control', placeholder: 'Your email' }, label: false
    = f.button :submit, 'Send me reset password instructions', class: 'btn btn-info'

  = render "auth/shared/links"