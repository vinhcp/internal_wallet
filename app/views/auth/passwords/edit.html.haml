.login-form
  %h2 Change your password
  - if @minimum_password_length
    - hint = "(#{@minimum_password_length} characters minimum)"
  = simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f|
    = f.input :reset_password_token, as: :hidden
    = f.input :password, wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control', placeholder: "New password #{hint}" }, label: false
    = f.input :password_confirmation, wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control', placeholder: 'Confirm new password' }, label: false
    = f.button :submit, 'Change my password', class: 'btn btn-info'

  = render "auth/shared/links"
